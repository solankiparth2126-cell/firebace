{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Stores non-authentication information and preferences for a user. Includes role-based access control.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the UserProfile entity (Firebase Auth UID)."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "displayName": {
          "type": "string",
          "description": "The user's preferred display name."
        },
        "role": {
          "type": "string",
          "enum": ["admin", "user"],
          "description": "The system role of the user."
        },
        "preferredCurrency": {
          "type": "string",
          "description": "The ISO 4217 currency code preferred by the user."
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp when the user profile was created.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "email",
        "displayName",
        "role",
        "preferredCurrency",
        "createdAt"
      ]
    },
    "Ledger": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Ledger",
      "type": "object",
      "description": "Represents a financial account.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "initialBalance": { "type": "number" },
        "currency": { "type": "string" },
        "isActive": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "userId", "name", "initialBalance", "currency", "isActive", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": { "$ref": "#/backend/entities/UserProfile" },
          "description": "User profiles. Admins can see all, users see only their own."
        }
      }
    ]
  }
}